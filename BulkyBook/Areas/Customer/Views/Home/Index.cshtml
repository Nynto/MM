@using Microsoft.AspNetCore.Mvc.ModelBinding.Validation
@model IEnumerable<Movie>

<form asp-controller="Home" asp-action="Index" method="get">
    <p>

        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter"/>
    </p>

</form>
<div class="row pb-3 backgroundWhite">
@foreach(var movie in Model)


       
        {
                    <div class="col-lg-3 col-md-4 col-xl-2 col-">
                        <div class="row p-2">
                            <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                                <div class="card" style="border:0px;">
            
                                    <img src="@movie.ImageUrl" class="card-img-top rounded"/>
                                    <div class="pl-1">
                                        <p class="card-title h5">
                                            <b style="color:#2c3e50">@movie.Title</b>
                                        </p>
                                        <p class="card-title text-primary">Directed by <b>@movie.Director</b></p>
                                    </div>
                                     @* <div style="padding-left:5px;">  *@
                                     @*     <p>Date: <b class="">@movie.Date</b></p>  *@
                                     @* </div>  *@
                                     <div style="padding-left:5px;"> 
                                         <p>AgeRating: <b class="">@movie.AgeGroup.Name</b></p> 
                                     </div> 
                                     <div style="padding-left:5px;"> 
                                         <p>Genre: <b class="">@movie.Genre.Name</b></p> 
                                    </div>
                                    
                                    
                                    @* <div style="padding-left:5px;"> *@
                                    @*     <p>Starttime: <b class="">@movie.StartTime</b></p> *@
                                    @* </div> *@
                                    @* <div style="padding-left:5px;"> *@
                                    @*     <p>Room: <b class="">@movie.Hall.Name</b></p> *@
                                    @* </div> *@
                                    
            
            
                                </div>
                                <div >
                                    <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@movie.Id">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
        
    }

</div>