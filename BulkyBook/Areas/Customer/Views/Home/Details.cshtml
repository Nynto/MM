
@model Event
@using static MovieMakers.Models.Movie

<form method="post">
    <input hidden asp-for="Id"/>
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-12 col-md-6">
                    <h1 class="text-primary">@Model.Movie.Title</h1>
                    <p class="text-warning">directed by @Model.Movie.Director</p>
                </div>
                <div class="col-12 col-md-6 text-lg-right pt-lg-4">
                    <span class="badge badge-success pt-3 " style="height:50px; font-size: large">Age Rating @Model.Movie.AgeGroup.Name</span>
                    <span class="badge badge-primary pt-3" style="height:50px;font-size: large">@Model.Movie.Genre.Name</span>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">
                            @* <div class="row pl-2"> *@
                            @*     <h5 class="btn btn-primary btn-lg  pb-2" data-toggle="button"><i class="fas fa-map-signs"></i> Room: 2 <br/> *@
                            @*         <i class="fas fa-clock"></i> *@
                            @*         Time 14:00</h5>&nbsp&nbsp *@
                            @*      *@
                            @*     <h5 class="btn btn-primary btn-lg  pb-2" data-toggle="button" ><i class="fas fa-map-signs"></i> Room: @Model.Hall.Name <br/> *@
                            @*         <i class="fas fa-clock"></i> *@
                            @*         Time @Model.StartTime</h5> &nbsp *@
                            @* *@
                            @*      *@
                            @* </div> *@
                            
                            <div class="btn-group btn-group-toggle" data-toggle="buttons">

                                <label class="btn btn-primary active">
                                    <input type="radio" class="btn-lg  pb-2"><i class="fas fa-map-signs"></i> Room: 2 <br/>
                                        <i class="fas fa-clock"></i>
                                        Time 14:00</input> &NonBreakingSpace;
                                </label>
                                
                                <label class="btn btn-primary">
                                    <input type="radio" class="btn-lg  pb-2"><i class="fas fa-map-signs"></i> Room: @Model.Hall.Name <br/>
                                        <i class="fas fa-clock"></i>
                                        Time @Model.StartTime</input>
                                </label>

                            </div>
                            <hr/>
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2"> <i class="fas fa-clock"></i> Duration: @Model.Movie.Duration min</h5>
                            </div>


                            <div class="row pl-2">
                                <h5 class="text-muted">IMDB : @Model.Movie.IMDB</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2"><i class="far fa-money-bill-alt"></i> Price: € @Model.Movie.ListPrice.ToString("0.00")</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">65+ and <i class="fas fa-child"></i> Kids: € @Model.Movie.Price.ToString("0.00")</h5>
                            </div>
                            
                            


                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Movie.Description)</p>
                            </div>
                            <hr/>



                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Movie.ImageUrl" width="100%" class="rounded"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-action="Index" class="btn btn-success form-control  btn-square btn-lg" style="height:50px;">Back to List</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-primary btn-square btn-lg form-control" style="height:50px;">Get a ticket</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>